<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_recycler_view_item_bg"
    android:layout_marginTop="8dp"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleTextView"
        style="@style/Global.Style.TextView.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/addButtonLayout"
        android:layout_alignParentStart="true"
        android:text="@string/add_tourist" />

    <FrameLayout
        android:id="@+id/addButtonLayout"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/add_item_bg"
        android:padding="4dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:src="@drawable/ic_add" />
    </FrameLayout>

</RelativeLayout>